<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_red4</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="button_inside_edit_text">@color/black</item>
        <item name="back_progress">@color/white</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--    animation dialog-->
    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_up</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="Theme.NewsApplication.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.NewsApplication.AppWidgetContainer" parent="Theme.NewsApplication.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>


<!--    Switch Button-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/custom_red4</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


    
    
<!--    Light Mode-->
<!--    Screen Background-->
    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

<!--    Text Color-->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Card Background Color-->
    <style name="Card">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--    Icon Card Background Setting Color-->
    <style name="Card_Icon_Setting">
        <item name="cardBackgroundColor">@color/custom_gray6</item>
    </style>

    <!--    RED-->
    <style name="RED">
        <item name="android:background">@color/custom_red4</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--    RED TEXT-->
    <style name="RED_TEXT">
        <item name="android:textColor">@color/custom_red4</item>
    </style>

    <!--    Card Background SETTING-->
    <style name="Card_SETTING">
        <item name="cardBackgroundColor">@color/custom_gray8</item>
        <item name="android:background">@color/custom_gray8</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/shabnam_bold</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/shabnam</item>
    </style>

</resources>
